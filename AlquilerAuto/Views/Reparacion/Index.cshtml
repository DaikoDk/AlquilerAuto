@model IEnumerable<AlquilerAuto.Models.Reparacion>

@{
    ViewData["Title"] = "Reparaciones de Reserva";
    var datosReserva = ViewBag.DatosReserva as AlquilerAuto.ViewModels.ReservaDetalleVM;
    var idReserva = ViewBag.IdReserva as int?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>?? Reparaciones</h2>
    @if (idReserva.HasValue)
    {
        <a asp-action="Create" asp-route-idReserva="@idReserva" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Nueva Reparación
        </a>
    }
</div>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (datosReserva != null)
{
    <div class="card shadow mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Datos de la Reserva #@datosReserva.IdReserva</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong>Cliente:</strong> @datosReserva.nombreCliente
                </div>
                <div class="col-md-4">
                    <strong>Auto:</strong> @datosReserva.modeloAuto - @datosReserva.placaAuto
                </div>
                <div class="col-md-4">
                    <strong>Estado:</strong> 
                    <span class="badge bg-@(datosReserva.Estado == "Finalizado" ? "success" : "warning")">
                        @datosReserva.Estado
                    </span>
                </div>
            </div>
        </div>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Tipo</th>
                        <th class="text-end">Costo</th>
                        <th>Responsable</th>
                        <th class="text-center">Estado</th>
                        <th>Fecha Reporte</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                <p class="mt-2">No hay reparaciones registradas para esta reserva</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.idReparacion</td>
                                <td>@item.descripcion</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.descripcionCatalogo))
                                    {
                                        <span class="badge bg-secondary">@item.descripcionCatalogo</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Personalizada</span>
                                    }
                                </td>
                                <td class="text-end fw-bold text-danger">S/ @item.costo.ToString("N2")</td>
                                <td>
                                    @if (item.responsable == "Cliente")
                                    {
                                        <span class="badge bg-warning text-dark">Cliente</span>
                                    }
                                    else if (item.responsable == "Empresa")
                                    {
                                        <span class="badge bg-info">Empresa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.responsable</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.estado == "Pendiente")
                                    {
                                        <span class="badge bg-warning">Pendiente</span>
                                    }
                                    else if (item.estado == "En proceso")
                                    {
                                        <span class="badge bg-primary">En proceso</span>
                                    }
                                    else if (item.estado == "Completada")
                                    {
                                        <span class="badge bg-success">Completada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.estado</span>
                                    }
                                </td>
                                <td>
                                    @if (item.fechaReporte.HasValue)
                                    {
                                        @item.fechaReporte.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" 
                                           asp-route-id="@item.idReparacion" 
                                           class="btn btn-warning"
                                           title="Editar costo/estado">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        
                                        @if (item.estado != "Completada" && item.estado != "Cancelada")
                                        {
                                            <a asp-action="CambiarEstado" 
                                               asp-route-id="@item.idReparacion" 
                                               asp-route-estado="Completada"
                                               asp-route-idReserva="@ViewBag.IdReserva"
                                               class="btn btn-success"
                                               title="Marcar como completada"
                                               onclick="return confirm('¿Marcar como completada?')">
                                                <i class="bi bi-check-circle"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                @if (Model.Any())
                {
                    <tfoot>
                        <tr class="table-secondary fw-bold">
                            <td colspan="3" class="text-end">Total Reparaciones:</td>
                            <td class="text-end text-danger">S/ @Model.Sum(r => r.costo).ToString("N2")</td>
                            <td colspan="4"></td>
                        </tr>
                        <tr class="table-warning fw-bold">
                            <td colspan="3" class="text-end">Total a Cargo del Cliente:</td>
                            <td class="text-end text-danger">S/ @Model.Where(r => r.responsable == "Cliente").Sum(r => r.costo).ToString("N2")</td>
                            <td colspan="4"></td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>

@if (idReserva.HasValue)
{
    <div class="mt-3">
        <a asp-controller="Reserva" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Reservas
        </a>
    </div>
}
