@model IEnumerable<AlquilerAuto.Models.Mantenimiento>

@{
    ViewData["Title"] = "Mantenimientos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>?? Mantenimientos</h2>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle"></i> Programar Mantenimiento
    </a>
</div>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Auto</th>
                        <th>Tipo</th>
                        <th>Descripción</th>
                        <th>Km Programado</th>
                        <th>Fecha Programada</th>
                        <th class="text-end">Costo</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                <p class="mt-2">No hay mantenimientos registrados</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            var estaVencido = item.estado == "Programado" && 
                                             item.fechaProgramada.HasValue && 
                                             item.fechaProgramada.Value.Date < DateTime.Now.Date;

                            <tr class="@(estaVencido ? "table-danger" : "")">
                                <td class="fw-bold">@item.idMantenimiento</td>
                                <td>
                                    <div>@item.modeloAuto</div>
                                    <small class="text-muted">@item.placaAuto</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.tipo</span>
                                </td>
                                <td>@item.descripcion</td>
                                <td>
                                    @if (item.kilometrajeProgramado.HasValue)
                                    {
                                        <span>@item.kilometrajeProgramado.Value.ToString("N0") km</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.fechaProgramada.HasValue)
                                    {
                                        <div>@item.fechaProgramada.Value.ToString("dd/MM/yyyy")</div>
                                        @if (estaVencido)
                                        {
                                            <small class="badge bg-danger">?? Vencido</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">S/ @item.costo.ToString("N2")</td>
                                <td class="text-center">
                                    @if (item.estado == "Programado")
                                    {
                                        <span class="badge bg-warning text-dark">Programado</span>
                                    }
                                    else if (item.estado == "En proceso")
                                    {
                                        <span class="badge bg-primary">En proceso</span>
                                    }
                                    else if (item.estado == "Completado")
                                    {
                                        <span class="badge bg-success">Completado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.estado</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.estado != "Completado" && item.estado != "Cancelado")
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" 
                                               asp-route-id="@item.idMantenimiento" 
                                               class="btn btn-warning"
                                               title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Completar" 
                                               asp-route-id="@item.idMantenimiento" 
                                               class="btn btn-success"
                                               title="Completar"
                                               onclick="return confirm('¿Confirmar que el mantenimiento fue completado?')">
                                                <i class="bi bi-check-circle"></i>
                                            </a>
                                            <a asp-action="Cancelar" 
                                               asp-route-id="@item.idMantenimiento" 
                                               class="btn btn-danger"
                                               title="Cancelar"
                                               onclick="return confirm('¿Cancelar este mantenimiento?')">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
