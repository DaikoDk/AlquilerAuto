@model AlquilerAuto.Models.Auto

@{
    ViewData["Title"] = "Eliminar Auto";
}

<h2>Eliminar Auto</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}
<div class="alert alert-warning">
    ¿Estás seguro que deseas eliminar este auto? Esta operación no se puede deshacer.
</div>

<hr />
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.idAuto)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.idAuto)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.placa)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.placa)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.modelo)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.modelo)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.anio)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.anio)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.precioPorDia)</dt>
    <dd class="col-sm-10">S/ @Model.precioPorDia.ToString("N2")</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.estado)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.estado)</dd>
</dl>

<form asp-action="DeleteInactive" method="post">
    <input type="hidden" name="id" value="@Model.idAuto" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</form>
